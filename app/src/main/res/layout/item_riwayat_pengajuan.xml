<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="330dp"
    android:layout_height="90dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:backgroundTint="#ffffff"
    app:cardCornerRadius="15dp"
    app:cardElevation="7dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:paddingTop="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="113dp"
        android:background="@drawable/circel2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/duapuluh1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:text="20"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/januari1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Jan"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />

    </LinearLayout>
    <TextView
        android:id="@+id/pengajuan1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="7dp"
        android:fontFamily="@font/rbold"
        android:text="Kepentingan Pengajuan "
        android:textColor="#000000"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/deskripsi1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="35dp"
        android:fontFamily="@font/rmedium"
        android:text="Deskripsi mengenai keperluan untuk istri ...."
        android:textColor="#000000"
        android:textSize="8sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/field_search1"
        android:layout_width="60dp"
        android:layout_height="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="33dp"
        app:cardBackgroundColor="#FFBC42"
        app:cardCornerRadius="50dp">

        <TextView
            android:id="@+id/pending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/rbold"
            android:text="Pending"
            android:textColor="#FFFFFF"
            android:textSize="7sp" />

    </androidx.cardview.widget.CardView>
    <ImageView
        android:id="@+id/back1"
        android:layout_width="20dp"
        android:layout_height="18dp"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="285dp"
        app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24"/>

</androidx.cardview.widget.CardView>