<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="330dp"
    android:layout_height="120dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:backgroundTint="#ffffff"
    app:cardCornerRadius="15dp"
    app:cardElevation="7dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="25dp"
        app:srcCompat="@drawable/group_62" />

    <TextView
        android:id="@+id/pengajuan1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="170dp"
        android:fontFamily="@font/rbold"
        android:text="Syarat Donor Darah"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/deskripsi1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginEnd="96dp"
        android:layout_marginTop="68dp"
        android:layout_marginLeft="35dp"
        android:fontFamily="@font/rmedium"
        android:text="Ketahui syarat-syarat untuk donor darah"
        android:textColor="#000000"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/lihatdetail1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:layout_marginLeft="25dp"
        android:text="Lihat detail"
        android:textColor="#D50031"
        android:textSize="7sp"/>

    <ImageView
        android:id="@+id/back1"
        android:layout_width="18dp"
        android:layout_height="12dp"
        android:layout_marginTop="83dp"
        android:layout_marginLeft="56dp"
        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"/>

</androidx.cardview.widget.CardView>