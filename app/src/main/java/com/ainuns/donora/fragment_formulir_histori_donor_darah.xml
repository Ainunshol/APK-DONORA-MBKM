<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/red"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="45dp"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

        <TextView
            android:id="@+id/formulirhistori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/rbold"
            android:text="Formulir Histori Donor Darah"
            android:textColor="#ffffff"
            android:textSize="18dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/grub256"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/group_256"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="156dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="78dp"
        android:fontFamily="@font/rbold"
        android:text="Formulir Histori Donor Darah"
        android:textColor="#ffffff"
        android:textSize="12dp"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="205dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:fontFamily="@font/rregular"
        android:text="Masukkan informasi histori donor kamu!"
        android:textColor="#ffffff"
        android:textSize="10dp"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="222dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toBottomOf="parent"/>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingTop="290dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/deskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rsemibold"
            android:text="Deskripsi"
            android:textColor="#2B2D42"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/fielddeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rmedium"
            android:inputType="number"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goldar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rsemibold"
                android:text="Tanggal Donor"
                android:textColor="#2B2D42"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/tanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10-01-2020"
                android:fontFamily="@font/rmedium"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/kuitansi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rsemibold"
                android:text="Kuitansi Donor"
                android:textColor="#2B2D42"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/bukti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rregular"
                android:text="Unggah bukti kuitansi donor kamu"
                android:textColor="#2B2D42"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="17dp"
                app:srcCompat="@drawable/group_257" />

            <androidx.cardview.widget.CardView
                android:id="@+id/field_search"
                android:layout_width="292dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:background="@drawable/circel"
                android:orientation="vertical"
                app:cardBackgroundColor="#EF233C"
                app:cardCornerRadius="23dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.273"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/rbold"
                    android:text="Simpan"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
